{
  "name": "electron-best-practice",
  "version": "1.0.1",
  "description": "electron best practice",
  "main": "./dist/main/index.js",
  "scripts": {
    "dev": "yarn start",
    "start": "electron-vite dev -w",
    "start-backup": "cross-env NODE_ENV=development electron . --remote-debugging-port=9222",
    "build": "electron-vite build",
    "build:common": "tsc --project tsconfig.json --outDir dist/common",
    "build:all": "yarn build && electron-builder -mwl",
    "build:mac": "yarn build && electron-builder --config electron-mac-builder.json --mac --x64 --publish never",
    "build:win": "yarn build && electron-builder --config electron-win-builder.json --win --x64 --publish never",
    "build:linux": "electron-builder --config electron-linux-builder.json --linux --x64 --publish never",
    "lint": "eslint --fix ./src ./test",
    "update-server": "node --watch ./scripts/fs-server.js"
  },
  "build": {
    "productName": "electron-best-practice",
    "appId": "cjj",
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "./src/extraResources/",
        "to": "extraResources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "http://127.0.0.1:3000"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "icon": "resources/icons/icon.ico"
    },
    "linux": {
      "icon": "resources/icons"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true
    }
  },
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "kevinbrother",
  "license": "CC0-1.0",
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "electron-log": "^4.4.8",
    "electron-updater": "^5.0.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@kss-frontend/lint": "0.0.2",
    "@types/express": "^5.0.0",
    "cross-env": "^7.0.3",
    "electron": "18.3.6",
    "electron-builder": "22.11.7",
    "electron-vite": "^2.3.0",
    "http-proxy-middleware": "^3.0.0",
    "nodemon": "^3.1.7",
    "rollup-plugin-copy": "^3.5.0",
    "vite": "^5.4.11"
  }
}
