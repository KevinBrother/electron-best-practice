{
  "name": "electron-best-practice",
  "version": "1.0.0",
  "description": "electron best practice",
  "main": "./main/main.js",
  "scripts": {
    "dev": "yarn start",
    "start": "cross-env  NODE_ENV=development electron . --remote-debugging-port=9222",
    "build": "electron-builder",
    "build:all": "electron-builder -mwl",
    "build:mac": "electron-builder --config electron-mac-builder.json --mac --x64 --publish never",
    "build:win": "electron-builder --config electron-win-builder.json --win --x64 --publish never",
    "build:linux": "electron-builder --config electron-linux-builder.json --linux --x64 --publish never",
    "render-server": "node ./scripts/render-server"
  },
  "build": {
    "productName": "electron-best-practice",
    "appId": "cjj",
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "./src/extraResources/",
        "to": "extraResources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "http://127.0.0.1:3000"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "icon": "resources/icons/icon.ico"
    },
    "linux": {
      "icon": "resources/icons"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true
    }
  },
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "kevinbrother",
  "license": "CC0-1.0",
  "dependencies": {
    "electron-log": "^4.4.8",
    "electron-updater": "^5.0.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "18.3.6",
    "http-proxy-middleware": "^3.0.0",
    "electron-builder": "22.11.7"
  }
}
